@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section Head {
    <style>
        .select {
            display: block;
            margin-top: 10px;
        }
    </style>
}

@section Scripts{
    <script src="~/lib/moment.js"></script>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script src="~/attendance.js"></script>
}

<div class="container">
    <h1 class="mt-5 titulo"> Member Out</h1>

    <p class="lead"> Enter member ID</p>



    <input id="texto" type="text" required />

    <!-- El modal de boostrap-->
    <!-- Button trigger modal -->
    <input type="button" id="boton" value="Registrar" />

    <!-- Modal -->
    <div class="modal fade" id="modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">
                        The member has left
                    </h5>
                </div>
                <div class="modal-body">
                    <div id="contenido">
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="btn-group select">
        <a href="~/Attendance/MemberIn" class="btn btn-primary" aria-current="page">Member In</a>
        <a href="#" class="btn btn-primary active">Member Out</a>
    </div>


</div>
